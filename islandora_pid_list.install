        'type' => 'int',
        'length' => 11,
        'not null' => TRUE,
      ),
      'pidid' => array(
        'description' => 'The PID of the Fedora Object.',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
      ),
    ),
  );
  
  $schema['islandora_pid_list_names'] = array(
    'description' => 'Stores lists and their associated names',
    'fields' => array(
        'listid' => array(
        'description' => 'The ID of the list',
