      ),
      'listid' => array(
        'description' => 'The ID of the list',
        'type' => 'int',
        'length' => 11,
        'not null' => TRUE,
      ), 
     ),
   );

  $schema['islandora_pid_list_pids'] = array(
    'description' => 'Stores pids and the lists they are associated to',
    'fields' => array(
